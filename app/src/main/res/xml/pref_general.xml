<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="parser"
        android:title="Parser"
        android:defaultValue="0"
        />
    <EditTextPreference
        android:key="url"
        android:title="Parser URL (Neustart erforderlich)"
        android:defaultValue=""
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        />


    <Preference
        android:key="order_hostlist"
        android:title="@string/order_hostlist"
        android:summary="@string/order_hostlist_summary"
        />


    <CheckBoxPreference
        android:defaultValue="@bool/allow_invalid_ssl_default"
        android:key="allow_invalid_ssl"
        android:title="@string/allow_invalid_ssl_title" />

    <PreferenceScreen
        android:title="Chromecast Einstellungen"
        android:summary="Einstellungen für Chromecast streaming">

        <CheckBoxPreference android:key="chromecast_lock_screen"
            android:title="Player am Sperrbildschirm"
            android:summaryOn="Videosteuerung am Sperrbildschirm anzeigen"
            android:summaryOff="Videosteuerung nicht am Sperrbildschirm anzeigen"
            android:defaultValue="true" />

        <CheckBoxPreference android:key="chromecast_notification"
            android:title="Player als Benachrichtigung"
            android:summaryOn="Videosteuerung als Benachrichtigung anzeigen"
            android:summaryOff="Videosteuerung nicht als Benachrichtigung anzeigen"
            android:defaultValue="true" />


    </PreferenceScreen>

    <Preference
        android:key="donate"
        android:title="Unterstütze KinoCast"
        android:summary="Unterstütze KinoCast mit einer Spende auf PayPal" />

    <Preference
        android:key="version_information"
        android:title="Version"
        />

</PreferenceScreen>
